<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.huang.nyclive">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@android:style/Theme.Holo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Camera"
            android:label="@string/camera" >
        </activity>
        <activity
            android:name=".Comment"
            android:label="@string/comments_label"
            android:theme="@android:style/Theme.Holo" >
        </activity>
        <activity
            android:name=".Setting"
            android:label="@string/settings_label">
        </activity>
        <activity android:name=".CameraListView"
            android:label="@string/camera_list"
            android:theme="@android:style/Theme.Black">
        </activity>
        <activity android:name=".About"
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".ManhattanCam"
            android:label="@string/manhattan"
            android:theme="@android:style/Theme.Black">
        </activity>
        <activity android:name=".BronxCam"
            android:label="@string/bronx"
            android:theme="@android:style/Theme.Black">

        </activity>
        <activity android:name=".BrooklynCam"
            android:label="@string/brooklyn"
            android:theme="@android:style/Theme.Black">

        </activity>
        <activity android:name=".QueensCam"
            android:label="@string/queens"
            android:theme="@android:style/Theme.Black">

        </activity>
    </application>

</manifest>
